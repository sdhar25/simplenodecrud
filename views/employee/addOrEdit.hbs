
<h3>
    {{viewTitle}}
</h3>
<form autocomplete="off" action="/employee" method="POST">
<input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Enter your name"  value="{{employee.fullName}}">
        <div class="text-danger"> {{employee.fullNameError}}</div>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Enter your email" value="{{employee.email}}">
        <div class="text-danger"> {{employee.emailError}}</div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Enter your mobile no." value="{{employee.mobile}}">
            <div class="text-danger"> {{employee.mobileError}}</div>
        </div>

        <div class="form-group col-md-6">
            <label>City</label>
            <input type="text" class="form-control" name="city" placeholder="Enter your city" value="{{employee.city}}">
            <div class="text-danger"> {{employee.cityError}}</div>
        </div>
    </div>

    
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
         <a href="/employee/list" class="btn btn-warning">View All</a>
    </div>

</form>
